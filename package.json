{
  "name": "beehive",
  "private": false,
  "license": "MIT",
  "repository": "http://github.com/mackiedrew/beehive/",
  "scripts": {
    "start": "MONGO_URL=mongodb://localhost:27017/beehive meteor run",
    "flow": "./node_modules/.bin/flow check",
    "flow:coverage": "./node_modules/.bin/flow-coverage-report",
    "lint": "./node_modules/.bin/eslint .",
    "lint:fix": "./node_modules/.bin/eslint . --fix",
    "lint:check": "./node_modules/.bin/eslint --print-config .eslintrc.js | ./node_modules/.bin/eslint-config-prettier-check",
    "test": "jest",
    "test:snap": "jest -u",
    "test:watch": "jest --watch",
    "prepush": "npm run lint && npm test"
  },
  "dependencies": {
    "babel-runtime": "6.26.0",
    "bootstrap": "4.0.0-beta",
    "meteor-node-stubs": "0.2.11",
    "react": "16.0.0",
    "react-addons-css-transition-group": "15.6.2",
    "react-addons-transition-group": "15.6.2",
    "react-dom": "16.0.0",
    "react-redux": "5.0.6",
    "react-router-dom": "4.2.2",
    "react-transition-group": "2.2.1",
    "reactstrap": "4.8.0",
    "redux": "3.7.2",
    "redux-saga": "0.15.6",
    "reselect": "3.0.1",
    "simpl-schema": "0.3.2",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "autoprefixer": "7.1.5",
    "babel-eslint": "8.0.1",
    "babel-jest": "21.2.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "6.24.1",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-15": "^1.0.0",
    "eslint": "4.8.0",
    "eslint-config-prettier": "2.6.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-react": "7.4.0",
    "flow-bin": "0.56.0",
    "flow-coverage-report": "0.3.0",
    "flow-typed": "2.2.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "jest-meteor-stubs": "github:mackbrowne/jest-meteor-stubs#master",
    "prettier": "1.7.4",
    "react-test-renderer": "^16.0.0",
    "redux-devtools": "3.4.0",
    "redux-saga-test-plan": "^3.2.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/jestSetup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "modulePaths": [
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^(.*):(.*)$": "<rootDir>/node_modules/jest-meteor-stubs/lib/$1_$2",
      "meteor/(.*)": "<rootDir>/node_modules/jest-meteor-stubs/lib/meteor/$1"
    },
    "unmockedModulePathPatterns": [
      "/^imports\\/.*\\.jsx?$/",
      "/^node_modules/"
    ],
    "collectCoverage": true,
    "coverageDirectory": ".coverage",
    "collectCoverageFrom": [
      "imports/**/*.js",
      "imports/**/*.jsx"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ]
  },
  "babel": {
    "presets": [
      "env",
      "flow",
      "react"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  },
  "flow-coverage-report": {
    "includeGlob": [
      "imports/**/*.js",
      "imports/**/*.jsx"
    ],
    "type": [
      "text",
      "html",
      "json"
    ],
    "outputDir": ".flow-coverage",
    "threshold": 40
  }
}
